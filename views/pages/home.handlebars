<div id="div_search_bar">
  <form
    class="form-inline my-2 my-lg-0"
    id="searchForm"
    action="/search"
    method="POST"
  >
    <input
      id="search_bar"
      class="form-control mr-sm-2"
      type="search"
      placeholder="Search"
      aria-label="Search"
      name="searchTerm"
    />
    <button
      id="search_submit"
      class="btn my-2 my-sm-0"
      type="submit"
    >Search</button>
  </form>
</div>

<!-- Example single danger button -->

<div class="div_dropdown">
  <div class="dropdown show btn-group" id="ddl_plants">
    <a
      class="btn btn-secondary dropdown-toggle"
      href="#"
      role="button"
      id="dropdownMenuLink"
      data-toggle="dropdown"
      aria-haspopup="true"
      aria-expanded="false"
    >
      Select Product Type
    </a>

    <div
      class="dropdown-menu"
      id="displayProp"
      aria-labelledby="dropdownMenuLink"
    >
    </div>
  </div>

</div>
<div>

</div>


<div id="filterDiv">

</div>

<div class="container">
  <div class="row">
    {{#if hasProduct}}
      {{#each productList}}

        <section class="col-lg-4 col-md-4 col-sm-7 col-xs-12">
          <div class="mx-3 mt-4 card">
            <img
              class="card-img-top"
              src={{this.productImage}}
              alt="{{this.title}} Image"
            />
            <div class="card-body">
              <h1 class="card-title">{{this.title}}</h1>
              <p class="card-text">Price: ${{this.price}}</p>

            </div>
            <div class="card-footer">
              <a
                class="btn btn-primary text-center"
                href="products/product/{{this._id}}"
                data-id="{{this._id}}"
              > View Product </a>
            </div>
          </div>
        </section>
      {{/each}}
    {{else}}
      <p> No Products Found.</p>

    {{/if}}
  </div>
</div>
{{> (lookup . 'partial') }}